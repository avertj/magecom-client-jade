.modal-content
    .modal-header
        button.close(ng-click="cancel()")
            span(aria-hidden='true') Ã—
            span.sr-only Close
        h4.modal-title Log in
    .modal-body
        .row
            .well
                form(ng-submit="login()", id="loginForm", novalidate="novalidate")
                    p.bg-warning(ng-if="error")
                        span.center-block.text-center.text-warning Invalid username / password
                    .form-group
                        label(for="username" class="control-label") Username
                        input(ng-model="form.username", type="text" class="form-control" id="username" name="username" value="" required="" title="Please enter you username" placeholder="Username")
                    .form-group
                        label(for="password" class="control-label") Password
                        input(ng-model="form.password", type="password" class="form-control" id="password" name="password" value="" required="" title="Please enter your password")
                    button.btn.btn-success.btn-block(type="submit") Log in
                    a.btn.btn-default.btn-block(href="#/signup") Sign up